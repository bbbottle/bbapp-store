{
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "build": "yarn workspaces run build",
        "g-meta": "node scripts/generate_app_meta_info.js",
        "release": "release-it --ci"
    },
    "release-it": {
        "github": {
            "release": true
        },
        "npm": {
            "publish": false
        },
        "hooks": {
            "before:init": "yarn g-meta"
        }
    },
    "devDependencies": {
        "glob": "^7.1.6",
        "release-it": "^14.6.0",
        "semver": "^7.3.5",
        "shelljs": "^0.8.4"
    },
    "version": "0.0.17"
}
